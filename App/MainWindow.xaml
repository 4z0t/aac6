<Window x:Class="App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid x:Name="EMark" Margin="0,0,0,157">
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="331*"/>
                <RowDefinition Height="61*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Error" Foreground="Red" Grid.RowSpan="2" />
            <TextBox x:Name="Program" AcceptsReturn="True" AcceptsTab="True" TextChanged="Program_TextChanged" Height="521" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,263,0,0" FontSize="18" Grid.RowSpan="2"/>
        </Grid>
    </Grid>

</Window>
